<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="subtitleTextAppearance">@style/Toolbar.SubTitleText</item>
        <item name="contentInsetStart">8dp</item>
        <item name="contentInsetLeft">8dp</item>
        <item name="contentInsetStartWithNavigation">8dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Toolbar.SubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DefaultPadding" parent="AppTheme">
        <item name="android:paddingStart">@dimen/horizontal_spacing</item>
        <item name="android:paddingEnd">@dimen/horizontal_spacing</item>
        <item name="android:paddingLeft">@dimen/horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/horizontal_spacing</item>
        <item name="android:paddingTop">@dimen/vertical_spacing</item>
        <item name="android:paddingBottom">@dimen/vertical_spacing</item>
    </style>

    <style name="ChatNameTextView" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChatMessageSenderNameTextView" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
